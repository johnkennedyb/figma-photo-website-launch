# MongoDB Connection String
MONGO_URI="your_mongodb_connection_string"

# JSON Web Token Secret
# You can generate a strong secret here: https://www.grc.com/passwords.htm
JWT_SECRET="your_jwt_secret"

# Server Port
PORT=3002

# Client URL for redirects (Stripe, Paystack)
CLIENT_URL="http://localhost:5173"

# Stripe API Keys
# The VITE_STRIPE_PUBLISHABLE_KEY in the frontend .env should match this
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# Email Configuration (using Mailtrap.io for development)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=
EMAIL_PASSWORD="your_email_password"

# Paystack API Keys
PAYSTACK_SECRET_KEY="your_paystack_secret_key"
